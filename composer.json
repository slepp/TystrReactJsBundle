{
    "name": "tystr/react-js-bundle",
    "description": "A bundle for integrating reactjs into symfony. Provides server-side rendering via the v8js php extension for isomorphic apps.",
    "keywords": ["react", "reactjs", "react.js", "bundle", "symfony", "isomorphic", "php", "v8js"],
    "type": "symfony-bundle",
    "require": {
        "reactjs/react-php-v8js": "^2.0",
        "twig/twig": "^1.23",
        "symfony/dependency-injection": "~2.7",
        "symfony/config": "~2.7",
        "symfony/http-kernel": "~2.7",
        "guzzlehttp/guzzle": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Stroud",
            "email": "tyler@tylerstroud.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Tystr\\ReactJsBundle\\": "" }
    }
}
